<section id="slider-section" class="container-fluid animalo" data-animate-effect="fadeIn">
    <div class="mask"></div>
    <div class="container__slider">
        <div class="slider" id="slider">

            {{>item-slider
                visible=false
                clase="contenido-opt-1"
                img="/img/Slider/slider-5.jpg"
                logos="/img/Slider/30-Aniversario.png"
                texts="/img/Slider/text-slider-aniversario.png"
            }}

            {{>item-slider
                visible=false
                clase="contenido-opt-2"
                img="/img/Slider/slider-0.jpg"
                logos="/img/Slider/logos-slider-0.png"
                texts="/img/Slider/text-slider-0.png"
            }}

            {{>item-slider
                visible=true
                clase="contenido-opt-3"
                img="/img/Slider/slider-1.jpg"
                text1="Tu procedimiento quirúrgico"
                text2="Precios accesibles, calidad médica."
            }}

            {{>item-slider
                visible=true
                clase="contenido-opt-3"
                img='/img/Slider/slider-2.jpg'
                text1="Cirugía contra la obesidad y diabetes"
                text2="Cirugía bariátrica y metabólica."
            }}

            {{>item-slider
                visible=true
                clase="contenido-opt-3"
                img='/img/Slider/slider-3.jpg'
                text1="Diagnóstico y tratamiento ginecológico"
                text2="Atención por citas y emergencias."
            }}

            {{>item-slider
                visible=true
                clase="contenido-opt-3"
                img='/img/Slider/slider-4.jpg'
                text1="Conoce nuestros Planes Prenatales"
                text2="Planifiquemos la llegada de tu bebé."
            }}

        </div>
        <div class="slider__btn slider__btn--prev" id="prev"><i class="fas fa-chevron-left"></i></div>
        <div class="slider__btn slider__btn--next" id="next"><i class="fas fa-chevron-right"></i></div>
    </div>
</section>